server {
    listen 80;
    listen 443 ssl http2;
    include /etc/nginx/conf.d/ssl-<domain name>.conf;
    server_name <server name fqdn>;

    access_log  {{ nginx_log_path }}/vhost/<server name fqdn>.access.log combined;
    access_log  {{ nginx_log_path }}/vhost/<server name fqdn>.extend.log extended_infos;
    access_log  {{ nginx_log_path }}/vhost_access.log vhost_combined;
    error_log   {{ nginx_log_path }}/vhost/<server name fqdn>.error.log warn;

    include /etc/nginx/conf.d/robots/configs/disallow_all.conf;

    if ($scheme = http) {
        return 301 https://$http_host$request_uri;
    }

    location ~* \.(?:git|svn|hg) {
        deny all;
    }

    location / {
        include /etc/nginx/conf.d/proxy/proxy_params.conf;
        proxy_pass http://<backend host>;
    }
}
